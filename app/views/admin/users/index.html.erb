<h2>會員列表</h2>
<% @users.each do |user| %>
  <p><%= link_to("編輯" , edit_admin_user_path(user)) %> | <%= link_to("刪除" , [:admin, user] , :confirm => "確定刪除？" ,  :method => :delete) %> | 
    <% if user.is_admin %>    
      <%= link_to("解除管理者權限" , offset_admin_path(user) , :confirm => "確定解除管理員權限？" ) %> 
    <% else %>   
      <%= link_to("設為管理者" , set_admin_path(user) , :confirm => "確定設為管理員？" ) %> 
    <% end %> 
      | <%=link_to(user.login , [:admin , user]) %>  
<% end %>
<hr>
