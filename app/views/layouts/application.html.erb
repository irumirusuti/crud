        <%= link_to("管理討論區" , admin_forums_path) %> | <%= link_to("管理使用者" , admin_users_path) %> 
      <% end %>
    <% else %> 
  <%= link_to("註冊" , signup_path ) %> /  <%= link_to("登入" , login_path) %><br/> 
  <% end %> 
  <%= yield %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type="text/javascript"></script>
