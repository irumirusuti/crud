<html>
  <head></head>
  <body>
    <h1><%= link_to("CRUD練習論壇" , root_url )%></h1>

    <%#= render "users/user_bar" %>
    <% if logged_in? %> 
      Hi! user:  <%= current_user.login %> / <%= link_to("登出", logout_path) %><br/>
